# vim: set ft=bash

export CLAM_COMMAND_NAME=${CLAM_COMMAND_NAME:-clam}
export CLAM_ROOT=$HOME/.config/clam
export CLAM_BIN=$CLAM_ROOT/bin
export CLAM_CONFIG=$CLAM_ROOT/config.cfg
export CLAM_MODULES=$CLAM_ROOT/modules

mkdir -p "$CLAM_BIN" &>/dev/null
mkdir -p "$CLAM_MODULES" &>/dev/null
mkdir -p "$CLAM_ROOT" &>/dev/null
touch "$CLAM_CONFIG"

